root = true

[*]
end_of_line = "lf"
insert_final_newline = true
indent_style = "space"
indent_size = 4
charset = "utf-8"
trim_trailing_whitespace = true
max_line_length = 80

[{MAKEFILE,Makefile,makefile,*.mk}]
indent_style = "tab"
indent_size = "unset"
tab_width = 4

[{*.cmd,*.CMD,*.bat,*.BAT}]
end_of_line = "crlf"

[{*.sh}]
end_of_line = "lf"
